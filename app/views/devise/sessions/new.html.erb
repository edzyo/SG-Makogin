<%=stylesheet_link_tag('structural/user_sign_in') %>

<h2 id="log-head">Log in</h2>
<div class="row " id="sign-in-form">
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal col-md-6 col-lg-6' }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
    <div>
    <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>


</div>